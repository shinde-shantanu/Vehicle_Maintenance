<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f8ff"

    tools:context=".mcheck"
    tools:layout_editor_absoluteY="25dp">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="353dp"
        android:layout_height="86dp"
        android:layout_marginBottom="21dp"
        android:text="Select the vehicle part you are uploading"
        android:textAlignment="center"
        android:textColor="@color/ddblue"
        android:textStyle="bold"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/wheels"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/back2" />

    <RadioButton
        android:id="@+id/wheels"
        android:layout_width="231dp"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:onClick="ontypeclicked"
        android:text="   Wheels"
        android:textColor="@color/dblue"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/trunk"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <RadioButton
        android:id="@+id/bonnet"
        android:layout_width="231dp"
        android:layout_height="0dp"
        android:layout_marginBottom="11dp"
        android:onClick="ontypeclicked"
        android:text="   Bonnet"
        android:textColor="@color/dblue"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/sideview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/trunk" />

    <RadioButton
        android:id="@+id/trunk"
        android:layout_width="230dp"
        android:layout_height="0dp"
        android:layout_marginBottom="11dp"
        android:onClick="ontypeclicked"
        android:text="   Trunk"
        android:textColor="@color/dblue"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/bonnet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wheels" />

    <Button
        android:id="@+id/back2"
        android:layout_width="122dp"
        android:layout_height="38dp"
        android:layout_marginBottom="26dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:onClick="back2"
        android:text="Previous Page"
        android:textColor="@color/tucson"
        android:background="#ffffff"
        app:layout_constraintBottom_toTopOf="@+id/textView6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioButton
        android:id="@+id/sideview"
        android:layout_width="231dp"
        android:layout_height="0dp"
        android:layout_marginBottom="71dp"
        android:onClick="ontypeclicked"
        android:text="   Side View"
        android:textColor="@color/dblue"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bonnet" />

</android.support.constraint.ConstraintLayout>